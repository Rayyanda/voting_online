<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ('header.ejs'); %>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Sign Up</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-5">
                <form action="/start-sign-up" method="post">
                    <div class="row mb-3">
                      <label for="inputEmail3" class="col-sm-3 col-form-label">Kode Unik</label>
                      <div class="col-sm-9">
                        <input type="text" class="form-control" id="kodeUnik" placeholder="jdr123" name="kodeUnik">
                      </div>
                    </div>
                    <div class="row mb-3">
                      <label for="inputPassword3" class="col-sm-3 col-form-label">Password</label>
                      <div class="col-sm-8">
                        <input type="password" class="form-control" id="passwordCreator" name="passwordDaftar">
                      </div>
                      <div class="col-sm-1">
                        <a href="#" onclick="togglepassword()">
                          <span><img id="eye" src="/image/eye.svg" alt="">
                          </span>
                        </a>
                      </div>
                    </div>
                    <div class="row mb-3">
                      <label for="userName" class="col-sm-3 col-form-label">Username</label>
                      <div class="col-sm-9">
                        <input type="text" name="userName" id="username" class="form-control">
                      </div>
                    </div>
                    <fieldset class="row mb-3">
                      <legend class="col-form-label col-sm-3 pt-0">Daftar Sebagai</legend>
                      <div class="col-sm-9">
                        <div class="form-check">
                          <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios1" value="kreator" checked>
                          <label class="form-check-label" for="gridRadios1" onclick="disabled()">
                           Kreator
                          </label>
                        </div>
                        <div class="form-check">
                          <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios2" value="peserta">
                          <label class="form-check-label" for="gridRadios2" id="peserta" onclick="enable()">
                            Peserta
                          </label>
                          <input type="text" name="kodevoting" class="form-control" id="kodevoting" placeholder="kode voting" disabled>
                        </div>
                      </div>
                    </fieldset>
                    
                    <button type="submit" class="btn btn-primary">Sign up</button>
                  </form>
            </div>
            <div class="col-md-2">
                <a href="#" onclick="acakkode()" id="acakKode" class="btn btn-light">Random Code</a>
                <% if(errors.length > 0){%>
                  <% errors.forEach((err)=>{ %>
                    <p><%= err %></p>
                  <% }); %>
                <% } %>
            </div>
        </div>
    </div>
</body>
</html>